.slider
  display flex
  flex-direction column
  height 600px
  position relative

  &__item
    display: flex
    flex-direction column
    padding 120px 0
    position absolute
    top 0
    left 0
    right 0
    opacity 0
    transition .6s ease


    &:first-child
      background linear-gradient(180deg, #2F3F66 0%, #314579 100%)
      z-index 10

    &:nth-child(2)
      background linear-gradient(180deg, #2F4966 0%, #34557C 100%)
      z-index 11

    &:nth-child(3)
      background linear-gradient(180deg, #2F6066 0%, #327179 100%)
      z-index 12

    &:last-child
      background linear-gradient(180deg, #4E2F66 0%, #603285 100%)
      z-index 13

    &--active
      opacity 1
      z-index 50

  &__item-wrapper
    margin 0
    padding 0 16px
    color white

  &__dots
    display none
    justify-content center

  &__dot
    content "."
    border-radius 50%
    width 10px
    height 10px
    background-color transparent
    border 1px solid white
    z-index 100
    cursor pointer
    margin-left 2px
    margin-right 2px
    transition 0.6s ease-in-out

    &--active
      background-color: white

  &__item-title
      font-size 32px
      line-height 40px
      font-weight 600
      margin-bottom 40px
      max-width 760px
      font-family Montserrat

  &__item-text
      display none
      font-family Roboto
      font-style normal
      font-weight normal
      line-height 24px
      font-size 16px
      margin-bottom 41px
      max-width 760px

@media (min-width: $tablet-width)
  .slider
    &__dots
      display flex
    &__item-text
      display block