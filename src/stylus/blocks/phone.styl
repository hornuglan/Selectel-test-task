.phone
  display flex
  transition opacity 0.3s ease
  &:hover
    opacity 0.6

  &__num
    display none
    @media (min-width: $tablet-width)
      display block

  &__link
    padding-left 23px
    font-family Roboto
    line-height 22px
    height 22px
    font-size 20px
    color white
    background url("../img/icon-phone.svg") left center no-repeat
    background-size 22px 22px

    @media (min-width: $tablet-width)
      .phone
        &__num
          display block
        &__link
          display block
